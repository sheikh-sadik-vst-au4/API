<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Ride History
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Previous Ride</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- {{#each data}}
                <div class="row">
                    <div class="card">
                        <div class="card-body">
                            <h4>{{this.name}}</h4>
                            <span><b>Mobile No. :</b> {{this.phoneno}}</span>
                            <span> <b>|| Car Type :</b> {{this.cartype}}</span>
                            <span> <b>|| Car Number : </b>{{this.carnumber}}</span>
                        </div>
                    </div>
                </div>
                {{/each}} --}}

                {{#each data}}
                <div class="card font">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2 my-auto"><img src="cab.png"></div>
                            <div class="col-8 my-auto">
                                <span class="text-muted"><b>{{this.time}}</b></span><br>
                                <span><img src="green.png" width="10px" height="10px"> {{this.from}}</span><br>
                                <span><img src="red.png" width="10px" height="10px">  {{this.to}}</span>
                            </div>
                            <div class="col-2 my-auto mx-auto">
                                {{#ifCond this.cancel true}}
                                <p class="text-danger text-center"><b>CANCEL</b></p>
                                {{else}}
                                <p class="text-success text-center"><b>{{this.fare}}</b></p>
                                {{/ifCond}}

                                <img src="driver.png" width="50px" height="50px"
                                    style="border: 1px solid black; border-radius: 50%;"></div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</div>